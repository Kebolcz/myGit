.rotate90{
    transform:rotate(90deg);
}
.bgwhite{
    background: #ffffff;
}
.bdNone{
    border: none;
}
.hide{
    display: none;
}
.searchBarAn{
    display: flex;
    /*position: absolute;
    left:0;*/
    width: 100%;
    animation: fadeInRight .5s ease-out;
}
@keyframes fadeInRight{
    0%{
        transform-origin:right;
        display: flex;
        opacity: 0;
        transform: scaleX(0);
    }
    100%{
        transform-origin:right;
        opacity: 1;
        transform: scaleX(750rpx);
    }
}
@keyframes fadeOutRight{
    0%{
        display: flex;
        opacity: 1;
        width:100%;
    }
    100%{
        display: none;
        opacity: 0;
        width:0;
    }
}
.noMore{
    border-top: 1px solid #e4e4e4;
    text-align: center;
    padding: 10rpx;
    color: #888888;
    font-size: 28rpx;
}
