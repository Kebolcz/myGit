/* pages/common/linkMan/index.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

/* swiper-start */

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #b6b6b6;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  color: #000;
}

.on {
  color: #58c5f8;
  border-bottom: 5rpx solid #58c5f8;
}

.swiper-box {
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

swiper-item {
  overflow: auto;
}

/* swiper-end */

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 16rpx;
  border-radius: 50%;
}

.ellipsis {
  width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}

.tab_left .weui-cell::before {
  border-top: none !important;
}

.tab_left .weui-cell {
  padding: 0;
}

.info {
  font-size: 24rpx;
  border-top: 1rpx solid #b6b6b6;
  border-bottom: 1rpx solid #b6b6b6;
}

.info>view {
  margin: 12rpx 0;
}

.uInfo>view:not(:last-child) {
  margin-right: 64rpx;
}

.uInfo>view:last-child {
  position: absolute;
  right: 0;
}

.tel>view:not(:last-child) {
  margin-right: 64rpx;
}

.tel>view:last-child {
  position: absolute;
  right: 0;
}

.phone {
  position: relative;
}

.phone>view:nth-child(1) {
  margin-right: 64rpx;
}

.phone>view:last-child {
  position: absolute;
  right: 0;
}

.detail>view {
  margin: 6rpx 0;
}

.tab_left>.weui-cells_after-title:not(:first-child) {
  margin-top: -1rpx;
}

.tele {
  background: #F8F8FF;
  border-radius: 4rpx;
  padding: 1rpx 0;
  box-shadow: 1rpx 1rpx #ccc;
}

.tab_right .weui-cell {
  padding: 20rpx 30rpx;
}
