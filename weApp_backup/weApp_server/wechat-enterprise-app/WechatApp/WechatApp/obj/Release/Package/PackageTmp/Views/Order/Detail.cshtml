@{
    Layout = null;
}
@model WechatApp.Models.Order
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0 minimal-ui" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <title>订单详情</title>

    <link href="~/Contents/Styles/framework.css" rel="stylesheet" />
    <link href="~/Contents/Styles/style.css" rel="stylesheet" />
    <link href="~/Contents/Styles/owl.theme.css" rel="stylesheet" />
    <link href="~/Contents/Styles/swipebox.css" rel="stylesheet" />
    <link href="~/Contents/Styles/font-awesome.css" rel="stylesheet" />
    <link href="~/Contents/Styles/animate.css" rel="stylesheet" />

    <script src="~/Contents/Scripts/jquery.js"></script>
    <script src="~/Contents/Scripts/jqueryui.js"></script>
    <script src="~/Contents/Scripts/framework.plugins.js"></script>
    <script src="~/Contents/Scripts/custom.js"></script>
    <style type="text/css">
        img.responsive-image {
            margin-bottom: 2px;
        }

        p.notification-page-item {
            padding: 8px 20px 8px 10px;
            margin-bottom: 10px;
        }

            p.notification-page-item i:first-child {
                height: 30px;
                width: 30px;
                line-height: 30px;
                font-size: 11px;
            }
    </style>

</head>
<body>
    <div id="preloader">
        <div id="status">
            <p class="center-text">
                页面加载中...
            </p>
        </div>
    </div>
    <div class="all-elements">
        <div id="content" class="snap-content">
            <div class="container material-box" id="dateChooseContainer">
                <div class="one-half-responsive">
                    <h4>订单详细信息</h4>
                    <p>管理员可以修改车辆、司机等信息</p>
                    <div class="container no-bottom">
                        <form action="/order/detail?guid=@ViewBag.Guid&ssoid=@ViewBag.UserId" method="post" class="orderForm" id="orderForm">
                            <fieldset>
                                <div class="formFieldWrap">
                                    <label class="field-title userNameField textNameField" for="userField">姓名:</label>
                                    <input type="text" name="person" value="@Model.Person" class="userField textField" id="userField" disabled="disabled" />
                                </div>
                                <div class="formFieldWrap">
                                    <label class="field-title timeNameField textNameField" for="timeField">预约时间:</label>
                                    <input type="text" name="time" value="@Model.BegTime" class="timeField requiredField textField" id="timeField" disabled="disabled" />
                                </div>
                                <div class="formFieldWrap">
                                    <label class="field-title originNameField textNameField" for="originField">开始地点:</label>
                                    <input type="text" name="origin" value="@Model.Origin" class="originField textField" id="originField" />
                                </div>
                                <div class="formFieldWrap">
                                    <label class="field-title destinationNameField textNameField" for="destinationField">结束地点:</label>
                                    <input type="text" name="destination" value="@Model.Destination" class="destinationField textField" id="destinationField" />
                                </div>
                                <div class="formFieldWrap">
                                    <label class="field-title carNameField textNameField" for="carField">车辆:<span>(可修改)</span></label>
                                    <select name="car" class="carField textField" id="carField">
                                        <option value="1" @(Model.Car == "1" ? "selected=\"selected\"" : "")>奥迪 Q7</option>
                                        <option value="2" @(Model.Car == "2" ? "selected=\"selected\"" : "")>奥迪 A6</option>
                                        <option value="3" @(Model.Car == "3" ? "selected=\"selected\"" : "")>丰田普拉多</option>
                                        <option value="4" @(Model.Car == "4" ? "selected=\"selected\"" : "")>别克商务舱GL8</option>
                                    </select>
                                </div>
                                <div class="formFieldWrap">
                                    <label class="field-title driverNameField textNameField" for="driverField">司机:<span>(可修改)</span></label>
                                    <select name="driver" class="driverField textField" id="driverField">
                                        <option value="1" @(Model.Driver == 1 ? "selected=\"selected\"" : "")>樊福成</option>
                                        <option value="2" @(Model.Driver == 2 ? "selected=\"selected\"" : "")>高阳</option>
                                        <option value="3" @(Model.Driver == 3 ? "selected=\"selected\"" : "")>周峥</option>
                                        <option value="-1" @(Model.Driver == -1 ? "selected=\"selected\"" : "")>待指定</option>
                                    </select>
                                </div>
                                <div class="formSubmitButtonErrorsWrap">
                                    <input type="submit" class="buttonWrap button button-green orderSubmitButton" id="orderSubmitButton" value="保 存" data-formid="orderForm" />
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


