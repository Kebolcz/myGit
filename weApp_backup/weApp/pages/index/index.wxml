<view class="page">
  <view class="page__hd" style="padding:8rpx 12rpx;">
    <view class="swiper">
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{imgUrls}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" style="width:100%;height:100%;" />
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <view class="page__bd" style="padding:4px 6px;">
    <view class="weui-grid__title"> <view style="border-bottom: 2px solid #1296db; width: 150rpx; padding: 0px; margin-bottom: 2px;">日常办公</view></view>
  <view class="weui-grids">
    <block wx:for="{{grid}}" wx:key="*this">
      <navigator url="/pages/{{item.action}}/index/index" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="{{item.url}}" />
        <view class="weui-grid__label">{{item.name}}</view>
      </navigator>
    </block>
  </view>
  <view class="weui-grid__title">
    <view style="border-bottom: 2px solid #1296db; width: 150rpx; padding: 0px; margin-bottom: 2px;">业务处理</view>
  </view>
  <view class="weui-grids">
    <block wx:for="{{grid2}}" wx:key="*this">
      <navigator url="/pages/{{item.action}}/index/index" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="{{item.url}}" />
        <view class="weui-grid__label">{{item.name}}</view>
      </navigator>
    </block>
  </view>
</view>
</view>