/**app.wxss**/
@import 'weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/*flex layout*/

.uf {
  display: flex;
}

.uf-f1 {
  flex: 1;
}

/*弹性盒纵向*/

.uf-ver {
  flex-direction: column;
}

/*水平两端对齐*/

.uf-he {
  justify-content: space-between;
}

/*水平居中对齐*/

.uf-hc {
  justify-content: center;
}

/*水平右对齐*/

.uf-hr {
  justify-content: flex-end;
}

/*垂直居中对齐*/

.uf-ac {
  align-items: center;
}

/*垂直底部对齐*/

.uf-ab {
  align-items: flex-end;
}

/*flex layout END*/
