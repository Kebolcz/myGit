<view class="page">
  <view class="page__hd" style="padding:8rpx 12rpx;">
    <view class="swiper">
      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{imgUrls}}" wx:key="{{action}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" style="width:100%;height:100%;" />
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>

  <view class="page__bd" style="padding:4px 6px;">
    <view class="weui-grids">
      <block wx:for="{{grid}}" wx:key="*this">
        <navigator url="/pages/{{item.action}}/index/index" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="{{item.url}}" />
          <view class="weui-grid__label">{{item.name}}</view>
        </navigator>
      </block>
    </view>
  </view>
</view>